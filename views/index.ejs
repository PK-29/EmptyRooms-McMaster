<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <div class="Title">
        <h1>Discover Empty Rooms at McMaster</h1><h2></h2></div>
        <form action="/" method="post">
    <div class="IN">
          <div style="width: 50%;margin-left: 10px;">
            <input name="time" type="text" class="ghost-input" placeholder="Enter a Time (ex: 11:00PM)" required="" style="
    width: 100%;
">
          </div>
          <div style="width: 35%;">
          <input name="rcode" type="text" placeholder="Building Code" class="ghost-input" list="build"/>
          <datalist id="build">
            <option>ABB</option>
            <option>BSB</option>
            <option>CNH</option>
            <option>DBAC</option>
            <option>DSB</option>
            <option>GH</option>
            <option>HH</option>
            <option>HSC</option>
            <option>ITB</option>
            <option>IAHS</option>
            <option>IWC</option>
            <option>JHE</option>
            <option>KTH</option>
            <option>LRW</option>
            <option>MDCL</option>
            <option>TSH</option>
            <option>UH</option>
          </datalist>
    
        </div>
          
          </div>
          <div class="IN">
          <div style="width: 50%;margin-left: 10px;">
            <input name="day" type="text" class="ghost-input" placeholder="Enter a Day" list="days" required="" style="
    width: 100%;"/>
            <datalist id="days">
              <option value="1">Mon</option>
              <option value="2">Tues</option>
              <option value="3">Wed</option>
              <option value="4">Thurs</option>
              <option value="5">Fri</option>
            
            </datalist>
          </div>
          <div style="width: 35%;">
    <input name="term" type="text" list="terms" class="ghost-input" placeholder="Enter a Term" required="">
    <datalist id = "terms">
      <option value="1">Fall</option>
      <option value="2">Winter</option>
      <option value="3">Summer</option>
    </datalist>
        </div>
          
          </div>
          <input type="submit" class="ghost-button" value="List EmptyRooms">
        </form>
        <div class="infotab" Style="width:23%"><p>Room</p> </div>
        <div class="infotab" Style="width:33%"><p>Occupation</p> </div>
        <div class="infotab" Style="width:23%"><p>Lecture</p> </div>
          <ul style="width:23%;">
            <% if(roomse !== null){%>
            <% for(var i=0; i < roomse.length; i++){ %>
              <li style="padding:18px 18px 18px 0px; line-height: 20px"><%= roomse[i] %></li>
              
              
            <% } %>
          </ul>
         
          <ul style="width:33%;">
            <% for(var i=0; i < roomse.length; i++){ %>
              <button class="accordion" style="width:77%"><%=lt[i][0]%></button> 
              <div class="panel">
               <% for(var j=0; j < lt[i].length;j++){ %>
               
                  <li style="padding:5px 0px;"><%= lt[i][j] %></li>
               <% } %>  
              </div>
              <% } %>
            
          </ul>
          <ul style="width:23%;">
            <% for(var i=0; i < roomse.length; i++){ %>
              <button class="accordion" style="width:110%"><%=c[i][0]%></button> 
              <div class="panel" style="width:100%">
                <% for(var j=0; j < c[i].length; j++){%>
                  <li style="padding:5px 0px;"><%= c[i][j] %></li>
                <% } %>
              </div>
              
            <% } %>
        
          </ul>
        <% } %>
        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
      </fieldset>
    </div>
  </body>
</html>
<script>
var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    this.classList.toggle("active");
    
    var panel = this.nextElementSibling;
    if (panel.style.maxHeight){
      panel.style.maxHeight = null;
    } else {
      panel.style.maxHeight = panel.scrollHeight + "px";
    } 
  });
}
</script>